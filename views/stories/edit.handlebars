<h1>Edit Project</h1>
<div class="row">
  <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
   <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>
     <div class="row">
      <div class="input-field">
        <input type="text" name="link" value="{{story.link}}">
        <label for="link">Link</label>
      </div>
    </div>
<div class="row">
      <div class="input-field">
        <select name="category">
          {{#select story.category}}
          <option value="web" selected>WEB</option>
          <option value="dekstop">Desktop</option>
          <option value="other">other</option>
          {{/select}}
        </select>
        <label for="category">Status</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <div class="row">
      <p>
        <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.allowComments }} checked="checked" {{/if}}>
        <label for="filled-in-box">Allow Comments</label>
      </p>
    </div>

    <div class="row">
      <div class="input-field">
        <h5>Tell Us Your Story and how to contact you:</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>

    <input type="submit" value="Save" class="btn">
  </form>
</div>